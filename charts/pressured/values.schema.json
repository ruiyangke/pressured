{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "pressured Helm Chart Values",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["cluster", "sidecar"],
      "description": "Deployment mode: cluster (central monitoring) or sidecar"
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of replicas (only used in cluster mode)"
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy"
        },
        "tag": {
          "type": "string",
          "description": "Image tag (defaults to chart appVersion)"
        }
      },
      "required": ["repository"]
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      }
    },
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "annotations": { "type": "object" },
        "name": { "type": "string" }
      }
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      }
    },
    "podAnnotations": { "type": "object" },
    "podLabels": { "type": "object" },
    "podSecurityContext": { "type": "object" },
    "securityContext": { "type": "object" },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        }
      }
    },
    "priorityClassName": {
      "type": "string",
      "description": "Priority class name for production workloads"
    },
    "topologySpreadConstraints": {
      "type": "array",
      "description": "Topology spread constraints for HA"
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minAvailable": { "type": ["integer", "string"] },
        "maxUnavailable": { "type": ["integer", "string"] }
      }
    },
    "nodeSelector": { "type": "object" },
    "tolerations": { "type": "array" },
    "affinity": { "type": "object" },
    "config": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "cgroup": {
              "type": "object",
              "properties": {
                "path": { "type": "string" },
                "poll_interval_ms": { "type": "integer", "minimum": 100 }
              }
            },
            "kubelet": {
              "type": "object",
              "properties": {
                "poll_interval_ms": { "type": "integer", "minimum": 1000 },
                "namespace_filter": { "type": "string" },
                "label_selector": { "type": "string" }
              }
            }
          }
        },
        "thresholds": {
          "type": "object",
          "properties": {
            "warn_percent": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Warning threshold percentage"
            },
            "critical_percent": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Critical threshold percentage"
            },
            "hysteresis_percent": {
              "type": "number",
              "minimum": 0,
              "maximum": 50,
              "description": "Hysteresis to prevent alert flapping"
            },
            "cooldown_seconds": {
              "type": "integer",
              "minimum": 0,
              "description": "Cooldown between alerts"
            }
          }
        },
        "dry_run": { "type": "boolean" },
        "log_level": {
          "type": "string",
          "enum": ["trace", "debug", "info", "warn", "error"]
        }
      }
    },
    "lua": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "scriptsDir": { "type": "string" },
        "timeoutMs": { "type": "integer", "minimum": 100 },
        "inlineScript": { "type": "string" },
        "scripts": { "type": "object" }
      }
    },
    "storage": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "backend": {
          "type": "string",
          "enum": ["local", "s3", "gcs", "azure"],
          "description": "Storage backend type"
        },
        "local": {
          "type": "object",
          "properties": {
            "path": { "type": "string" }
          }
        },
        "s3": {
          "type": "object",
          "properties": {
            "bucket": { "type": "string" },
            "prefix": { "type": "string" },
            "region": { "type": "string" },
            "endpoint": { "type": "string" },
            "irsaRoleArn": { "type": "string", "description": "IAM Role ARN for IRSA (recommended for EKS)" },
            "existingSecret": { "type": "string" },
            "accessKeyIdKey": { "type": "string" },
            "secretAccessKeyKey": { "type": "string" }
          }
        },
        "gcs": {
          "type": "object",
          "properties": {
            "bucket": { "type": "string" },
            "prefix": { "type": "string" },
            "existingSecret": { "type": "string" },
            "serviceAccountKeyKey": { "type": "string" }
          }
        },
        "azure": {
          "type": "object",
          "properties": {
            "container": { "type": "string" },
            "prefix": { "type": "string" },
            "storageAccount": { "type": "string" },
            "existingSecret": { "type": "string" },
            "storageAccountKeyKey": { "type": "string" }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "storageClass": { "type": "string" },
        "accessModes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "size": { "type": "string" },
        "annotations": { "type": "object" },
        "existingClaim": { "type": "string" }
      }
    },
    "extraEnvVars": { "type": "array" },
    "extraVolumes": { "type": "array" },
    "extraVolumeMounts": { "type": "array" },
    "metrics": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "port": { "type": "integer" },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "interval": { "type": "string" },
            "labels": { "type": "object" }
          }
        }
      }
    }
  },
  "required": ["mode", "image"]
}
